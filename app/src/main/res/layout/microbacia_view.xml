<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    app:cardElevation="7dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/cinza">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp">

        <TextView
            android:id="@+id/tituloNomeProprietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/nomeProprietario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proprietário"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tituloNomeProprietario"/>

        <TextView
            android:id="@+id/tituloCpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/nomeProprietario"
            android:layout_alignStart="@id/tituloNomeProprietario"
            android:layout_alignLeft="@id/tituloNomeProprietario"/>

        <TextView
            android:id="@+id/cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF"
            android:textColor="@color/black"
            android:layout_below="@id/nomeProprietario"
            android:layout_toRightOf="@id/tituloCpf"
            />

        <TextView
            android:id="@+id/tituloRua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rua: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/tituloCpf"
            android:layout_alignStart="@id/tituloNomeProprietario"
            android:layout_alignLeft="@id/tituloNomeProprietario"/>

        <TextView
            android:id="@+id/rua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rua"
            android:textColor="@color/black"
            android:layout_below="@id/cpf"
            android:layout_toRightOf="@id/tituloRua"/>

        <TextView
            android:id="@+id/tituloNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/tituloRua"
            android:layout_alignStart="@id/tituloNomeProprietario"
            android:layout_alignLeft="@id/tituloNomeProprietario"/>

        <TextView
            android:id="@+id/numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número"
            android:textColor="@color/black"
            android:layout_below="@id/rua"
            android:layout_toRightOf="@id/tituloNumero"/>
        <TextView
            android:id="@+id/tituloVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/tituloNumero"
            android:layout_alignStart="@id/tituloNomeProprietario"
            android:layout_alignLeft="@id/tituloNomeProprietario"/>

        <TextView
            android:id="@+id/volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:textColor="@color/black"
            android:layout_below="@id/numero"
            android:layout_toRightOf="@id/tituloVolume"/>

        <TextView
            android:id="@+id/tituloAltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/tituloVolume"
            android:layout_alignStart="@id/tituloNomeProprietario"
            android:layout_alignLeft="@id/tituloNomeProprietario"/>

        <TextView
            android:id="@+id/altura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Altura"
            android:textColor="@color/black"
            android:layout_below="@id/volume"
            android:layout_toRightOf="@id/tituloAltura"/>

        <TextView
            android:id="@+id/tituloLargura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Largura: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/tituloAltura"
            android:layout_alignStart="@id/tituloNomeProprietario"
            android:layout_alignLeft="@id/tituloNomeProprietario"/>


        <TextView
            android:id="@+id/largura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Largura"
            android:textColor="@color/black"
            android:layout_below="@id/altura"
            android:layout_toRightOf="@id/tituloLargura"/>

        <TextView
            android:id="@+id/tituloAngulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ângulo: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/tituloLargura"
            android:layout_alignStart="@id/tituloNomeProprietario"
            android:layout_alignLeft="@id/tituloNomeProprietario"/>

        <TextView
            android:id="@+id/angulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Angulo"
            android:textColor="@color/black"
            android:layout_below="@id/largura"
            android:layout_toRightOf="@id/tituloAngulo"/>

        <TextView
            android:id="@+id/tituloCEP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CEP: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/tituloAngulo"
            android:layout_alignStart="@id/tituloNomeProprietario"
            android:layout_alignLeft="@id/tituloNomeProprietario"/>

        <TextView
            android:id="@+id/cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cep"
            android:textColor="@color/black"
            android:layout_below="@id/angulo"
            android:layout_toRightOf="@id/tituloCEP"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>

